#!/bin/bash
# configure script for Vim
# Last updated 230208-1317

# Change to vim directory
cd /usr/local/src/vim

# Get latest build
git pull

# Configure
sudo bash configure --with-features=huge --enable-multibyte --enable-python3interp=yes  --enable-fail-if-missing --with-python3-config-dir=/usr/lib/python3.10/config-3.10-x86_64-linux-gnu

# Make and Make Install
sudo make -j2
sudo make -j4 install

# Clean up for storage
sudo make distclean

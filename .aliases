## LS Aliases
#alias ls='ls -GFh'
#alias la='ls -laGFh'
#alias ll='ls -lGFh'
alias ls='eza -l --group-directories-first'
alias la='eza -la --group-directories-first'
alias ll='eza -l --group-directories-first'

## vim Alias - Use vim built from git source
alias vi='/usr/local/bin/vim'

## grep Alias
alias grep='grep --color=auto'

## tldr Alias
alias man='tldr'

## Fing alias
alias fing='sudo fing -r 1'

## Other application Aliases
alias tvnamer='tvnamer --always --recursive '
alias htop='sudo htop'
alias sudo='sudo '      # Allow sudo to pass aliases
alias git='git '        # Allow git to pass aliases

# Mac-Specific Aliases
## Homebrew Alias
alias buu='brew update && brew upgrade && brew cleanup'

#!/bin/bash
# configure script for Vim

# Change to vim directory
cd /usr/local/src/vim

# Get latest build
git pull

# Configure
sudo bash configure --with-features=huge --enable-multibyte --enable-python3interp=yes  --with-python3-config-dir=/usr/lib/python3.9/config-3.9-arm-linux-gnueabihf --enable-fail-if-missing

# Make and Make Install
sudo make -j2
sudo make -j4 install
